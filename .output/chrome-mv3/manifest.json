{
  "manifest_version": 3,
  "name": "微信读书导出",
  "description": "一键导出微信读书笔记",
  "version": "1.0.0",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "homepage_url": "https://github.com/scarqin/wxread-export",
  "host_permissions": [
    "https://i.weread.qq.com/*",
    "*://*.google.com/*",
    "http://localhost/*"
  ],
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Default Popup Title",
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3000; object-src 'self';"
  },
  "permissions": [
    "tabs",
    "scripting"
  ]
}